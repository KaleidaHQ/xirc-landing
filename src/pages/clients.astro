---
import "../styles/global.css";

const clients = [
    { name: "Pineapple", url: "https://pineapple.im" },
    { name: "Coming soon...", url: "https://xirc.xyz" },
    { name: "Coming soon...", url: "https://xirc.xyz" },
];
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <link
            rel="apple-touch-icon"
            sizes="180x180"
            href="/apple-touch-icon.png"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="32x32"
            href="/favicon-32x32.png"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="16x16"
            href="/favicon-16x16.png"
        />
        <link rel="manifest" href="/site.webmanifest" />
        <title>XIRC Clients</title>
    </head>
    <body>
        <div class="container">
            <h1>Supported XIRC Clients</h1>
            <ul>
                {
                    clients.map((client) => (
                        <li>
                            <a
                                href={client.url}
                                target="_blank"
                                rel="noopener noreferrer"
                            >
                                {client.name}
                            </a>
                        </li>
                    ))
                }
            </ul>
        </div>
    </body>
</html>
